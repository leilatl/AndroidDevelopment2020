<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:text="234"
        android:textSize="30sp"></EditText>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="DEL"
            android:textSize="30dp"></Button>
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="="
            android:textSize="30dp"></Button>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="1"
        android:textSize="30dp"></Button>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="2"
        android:textSize="30dp"></Button>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="3"
        android:textSize="30dp"></Button>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="/"
        android:textSize="30dp"></Button>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="4"
            android:textSize="30dp"></Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="5"
            android:textSize="30dp"></Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="6"
            android:textSize="30dp"></Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="-"
            android:textSize="30dp"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="7"
            android:textSize="30dp"></Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="8"
            android:textSize="30dp"></Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="9"
            android:textSize="30dp"></Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="x"
            android:textSize="30dp"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="."
            android:textSize="30dp"></Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="0"
            android:textSize="30dp"></Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="%"
            android:textSize="30dp"></Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="+"
            android:textSize="30dp"></Button>
    </LinearLayout>
</LinearLayout>